@using EcommerceApp.ViewModel.Brand;
@model CreateBrandViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Add Brand</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form method="post" asp-controller="Brand" asp-action="Create">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control col-md-5" asp-for="Name" required="required" placeholder="Enter Brand"><br>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="Status"> Status
                </label>
            </div>
            <!-- form End -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-controller="Brand" asp-action="Index" class="btn btn-primary">Back to List</a>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>
    </form>
</div>

