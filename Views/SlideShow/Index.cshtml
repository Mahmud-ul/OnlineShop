@using EcommerceApp.ViewModel.SlideShow;
@model IEnumerable<SlideShowViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box">
    <div class="box-header">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Slide-Show</h2>
                <hr />
            </div>
        </div>
    </div>
    <div class="col-md-12">
    </div>
        <div class="box-body">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th><i>Id</i></th>
                        <th><i>Photo</i></th>
                        <th><i>Status</i></th>
                        <th><i>Action</i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SlideShowViewModel item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <img src="~/@item.Photo" height="100" width="250">
                            </td>
                            <td>@(item.Status == true? "show" : "Not Show")</td>
                            <td>
                                <a asp-controller="SlideShow" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning text-black"><i class="fa fa-pencil"></i> &nbsp; Update</a> |
                                <a asp-controller="SlideShow" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you Sure?')"><i class="fa fa-trash-o" aria-hidden="true"></i> &nbsp; Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th><i>Id</i></th>
                        <th><i>Photo</i></th>
                        <th><i>Status</i></th>
                        <th><i>Action</i></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

