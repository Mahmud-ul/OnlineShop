@using EcommerceApp.ViewModel.ProductPhoto;
@using EcommerceApp.ViewModel.Product;
@model ProductPhotoUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Update Product Photo</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <form method="post" asp-controller="ProductPhoto" asp-action="Update" asp-route-pht="@Model.Photo" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-8">
                                <select class="form-control" asp-for="ProductId">
                                    <option value="">Choose Product</option>
                                    @foreach (ProductViewModel item in ViewBag.Products)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Photo">Choose Photo</label>
                            <Input type="file" asp-for="@Model.Photo" value="Model.Photo">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="@Model.Status"> Status
                            </label>
                        </div>
                        <input type="hidden" asp-for="@Model.Featured">
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success">Update</button>
                        <a asp-controller="ProductPhoto" asp-action="Index" class="btn btn-primary">Back to List</a>
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                    </div>
                </form>
            </div>
            <div class="col-md-6">               
                <br><br><br><img src="~/@Model.Photo" height="100" width="250">
            </div>
        </div>
    </div>
</div>

