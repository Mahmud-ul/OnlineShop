@using EcommerceApp.ViewModel.ProductPhoto;
@using EcommerceApp.ViewModel.Product;
@model ProductPhotoCreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Add Product Photo</h2><hr />
    </div>
    <form method="post" asp-controller="ProductPhoto" asp-action="Create" enctype="multipart/form-data">
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <select class="form-control" asp-for="ProductId">
                        <option value="">Choose Product</option>
                        @foreach (ProductViewModel item in ViewBag.Products)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Photo">Choose Photo</label>
                <Input type="file" asp-for="Photo">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="Status"> Status
                </label>
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-controller="ProductPhoto" asp-action="Index" class="btn btn-primary">Back to List</a>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>
    </form>
</div>

