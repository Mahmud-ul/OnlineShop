@using EcommerceApp.ViewModel.Category;
@model CategorySubViewModel
@{
    ViewData["Title"] = "SubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Add Sub-Category</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form method="post" asp-controller="Category" asp-action="SubCategory">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="Name">Parent-Category</label>
                <input type="text" class="form-control col-md-5" asp-for="Name" readonly="readonly"><br>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="subCategory">Sub Category Name</label>
                <input type="text" id="subCategory" name="subCategory" class="form-control col-md-5"><br>                
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="Status"> Status
                </label>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to List</a>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>
    </form>
</div>

