@using EcommerceApp.ViewModel.Product;
@using EcommerceApp.ViewModel.Category;
@using EcommerceApp.ViewModel.Brand;
@model ProductCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Add Product</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-md-8">
            <form method="post" asp-controller="Product" asp-action="Create">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control col-md-5" asp-for="Name" required="required" placeholder="Enter Product Name"><br>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input type="text" class="form-control col-md-5" asp-for="Price" required="required" placeholder="Enter Product Price"><br>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity">Quantity</label>
                        <input type="text" class="form-control col-md-5" asp-for="Quantity" required="required" placeholder="Enter Product Quantity"><br>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Category Name</label>
                        <select class="form-control col-md-3" asp-for="CategoryId">
                            <option value="">Choose Category</option>
                            @foreach (CategoryCreateViewModel item in ViewBag.SubCategories)
                            {
                                if (@item.MainCat != null)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandId">Brand Name</label>
                        <select class="form-control col-md-3" asp-for="BrandId">
                            <option value="">Choose Brand</option>
                            @foreach (CreateBrandViewModel item in ViewBag.Brands)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Detail">Detail</label>
                        <textarea class="form-control col-md-5" asp-for="Detail" rows="3" required="required" placeholder="Enter Product Detail"></textarea><br>
                        <span asp-validation-for="Detail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Specification</label>
                        <textarea class="form-control col-md-5" asp-for="Description" rows="3" required="required" placeholder="Enter Product Description"></textarea><br>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="Featured"> Featured
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="Status"> Status
                        </label>
                    </div>
                    <!-- form End -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to List</a>
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </form>
        </div>
    </div>
</div>

